{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["es2020"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./",
    "declaration": true,
    "resolveJsonModule": true
  },
  "include": ["handlers/**/*", "shared/**/*"],
  "exclude": ["node_modules", "dist"]
}
